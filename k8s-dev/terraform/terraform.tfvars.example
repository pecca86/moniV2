# Example Terraform Variables
# Copy this file to terraform.tfvars and customize

# AWS Configuration
aws_region = "eu-central-1"

# Project Configuration
project_name = "moni"
environment  = "dev"

# EC2 Instance Configuration
instance_type = "t4g.small"  # ARM64 instance for cost savings
volume_size   = 20           # GB

# K3s Configuration
k3s_version = "v1.28.4+k3s1"

# SSH Key (leave empty to generate a new key pair)
key_name = ""

# Optional: Domain name for SSL
domain_name = ""
enable_ssl  = false

# Monitoring
enable_monitoring = false

# Security (consider restricting in production)
allowed_ssh_cidr  = ["0.0.0.0/0"]  # Restrict to your IP in production
allowed_http_cidr = ["0.0.0.0/0"]

# ECR Configuration
ecr_backend_url  = "026596707189.dkr.ecr.eu-central-1.amazonaws.com/moni-be"
ecr_frontend_url = "026596707189.dkr.ecr.eu-central-1.amazonaws.com/moni-fe"
